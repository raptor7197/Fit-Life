# Environment Configuration Template for FitLife Gym Buddy App
# Copy this file to .env and update values for your environment

# ============================
# APPLICATION SETTINGS
# ============================
NODE_ENV=production
PORT=5000
REACT_APP_API_URL=http://localhost:5000/api
REACT_APP_ENV=production

# ============================
# DATABASE CONFIGURATION
# ============================
# MongoDB Connection
MONGODB_URI=mongodb://localhost:27017/fitlife
MONGODB_URI_TEST=mongodb://localhost:27017/fitlife-test

# MongoDB Admin Credentials (for Docker)
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=your-secure-mongo-password
MONGO_DB_NAME=fitlife

# ============================
# REDIS CONFIGURATION
# ============================
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your-secure-redis-password

# ============================
# JWT & AUTHENTICATION
# ============================
# IMPORTANT: Change these in production!
JWT_SECRET=your-super-secret-jwt-key-minimum-32-characters-long
JWT_REFRESH_SECRET=your-super-secret-refresh-key-minimum-32-characters-long
JWT_EXPIRES_IN=24h

# ============================
# EMAIL SERVICE CONFIGURATION
# ============================
# SMTP Settings for notifications
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password

# Email From Information
EMAIL_FROM_NAME=FitLife Gym Buddy
EMAIL_FROM_ADDRESS=noreply@yourfitlifeapp.com

# ============================
# GOOGLE GEMINI AI
# ============================
# Get your API key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your-gemini-api-key
GEMINI_MODEL=gemini-pro

# ============================
# RATE LIMITING
# ============================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ============================
# SECURITY & CORS
# ============================
# Comma-separated list of allowed origins
ALLOWED_ORIGINS=http://localhost:3000,https://yourfitlifeapp.com

# ============================
# LOGGING & MONITORING
# ============================
LOG_LEVEL=info
LOG_FILE_PATH=./logs/app.log

# ============================
# DEVELOPMENT SETTINGS
# ============================
# Set to true to enable development features
DEBUG=false
VERBOSE_LOGGING=false

# ============================
# DEPLOYMENT SETTINGS
# ============================
# For cloud deployments
CLOUD_STORAGE_BUCKET=your-storage-bucket
CDN_URL=https://your-cdn-url.com

# SSL Certificate paths (for HTTPS)
SSL_CERT_PATH=/path/to/ssl/certificate.crt
SSL_KEY_PATH=/path/to/ssl/private.key

# ============================
# HEALTH CHECK SETTINGS
# ============================
HEALTH_CHECK_INTERVAL=30000
HEALTH_CHECK_TIMEOUT=5000

# ============================
# BACKUP CONFIGURATION
# ============================
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=your-backup-bucket